@model IEnumerable<webAppRehber.Models.newRehber>

@{
    ViewData["Title"] = "Index";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand">webAppRehber</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-flex justify-content-center">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="newRehbers" asp-action="Index">Rehberim</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="newRehbers" asp-action="ShowSearchForm">Ara</a>
                    </li>           
                    <li class="nav-item">
                        <form class="nav-link text-dark" style="border-color:none"  id="logoutForm" method="post" action="/newRehbers/Logout">
                            <button type="submit">Çıkış Yap</button>
                        </form>
                    </li>
                    
                  
                </ul>
            </div>
    </nav>
</header>


<p>
    <a asp-action="Create">Yeni Kişi Oluştur</a>
</p>
 

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.YeniKişiAdı)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soyadı)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelNo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.YeniKişiAdı)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soyadı)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TelNo)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Detaylar</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
